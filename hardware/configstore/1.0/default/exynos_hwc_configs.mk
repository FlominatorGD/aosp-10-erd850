    LOCAL_CFLAGS += -DGRALLOC_VERSION=$(BOARD_USES_EXYNOS_GRALLOC_VERSION)
endif

ifeq ($(BOARD_USES_HWC_CPU_PERF_MODE),true)
    LOCAL_CFLAGS += -DUSES_CPU_PERF_MODE
endif


