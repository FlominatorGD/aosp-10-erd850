<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AutoLoggingActivity">

    <Button
        android:id="@+id/btnConn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/btnUnbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unbind"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="157dp" />

    <Button
        android:id="@+id/btnStartSilent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartSilent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="224dp" />

    <Button
        android:id="@+id/btnStopSilent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopSilent"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="289dp" />

    <Button
        android:id="@+id/btnStartAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartAuto"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/btnStopAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopAuto"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/btnStartAutoProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartAutoWithProfile"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="353dp" />
</LinearLayout>
