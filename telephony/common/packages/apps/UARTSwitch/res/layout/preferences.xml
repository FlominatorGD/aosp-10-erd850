<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:key="@string/key_uart_switch"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:title="@string/str_uart_switch" >

    <ListPreference
        android:dialogTitle="@string/str_uart_switch_mode"
        android:entries="@array/array_uart"
        android:entryValues="@array/array_uart"
        android:key="@string/key_uart_switch_mode"
        android:title="@string/str_uart_switch_mode" />

    <ListPreference
        android:dialogTitle="@string/str_dun_settings"
        android:entries="@array/array_dun"
        android:entryValues="@array/array_dun"
        android:key="@string/key_dun_settings"
        android:title="@string/str_dun_settings" />

</PreferenceScreen>