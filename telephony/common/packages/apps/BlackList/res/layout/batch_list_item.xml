<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/batch_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:enabled="false"
        android:focusableInTouchMode="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight" >
        <TextView
            android:id="@+id/batch_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/batch_intercept_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/batch_list_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@id/batch_list_name"
            android:layout_toLeftOf="@id/batch_intercept_type"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"/>

    </RelativeLayout>
</LinearLayout>
