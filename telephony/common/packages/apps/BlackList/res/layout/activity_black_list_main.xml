<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.slsi.blacklist.BlackListMainActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/bg_blue"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:id="@+id/title_batch_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/press_batch_delete_view"/>

    <ImageButton
        android:id="@+id/title_back_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/press_return_view"/>

   <ListView
       android:id="@+id/black_list_number"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:choiceMode="singleChoice"
       android:drawSelectorOnTop="false"
       android:fastScrollEnabled="true"
       android:scrollbars="vertical"
       android:layout_below="@id/title_back_btn"/>

   <ImageButton
       android:id="@+id/add_button"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_marginLeft="85dp"
       android:layout_marginBottom="15dp"
       android:background="@drawable/press_add_view"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:visibility="visible"/>

   <ImageButton
       android:id="@+id/call_log_button"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_marginRight="85dp"
       android:layout_marginBottom="15dp"
       android:background="@drawable/press_call_view"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:visibility="visible"/>
</RelativeLayout>
